{
    "name": "kilroy.ui_agent_template/chat_agent/pause_hook",
    "version": "1",
    "description": "",
    "isInteractive": false,
    "clean_up": true,
    "inputs": [],
    "outputs": [
        "cmsg",
        "swarm_*"
    ],
    "args": {
        "role": "*"
    },
    "steps": [
        {
            "operation": "set_value",
            "isServer": true,
            "args": {
                "variable": "wfCleanupFlag",
                "value": "1"
            }
        },
        {
            "operation": "step_group",
            "isServer": true,
            "args": {
                "role": "system",
                "message": "",
                "timer": "24",
                "isInteractive": false,
                "canTerminate": false,
                "success": [
                    {
                        "operation": "if_then_else",
                        "isServer": true,
                        "args": {
                            "condition": "\"${inject_sub_swarm}\" != \"${inject_pub_swarm}\"",
                            "success": [
                                {
                                    "operation": "swarm_command",
                                    "isServer": true,
                                    "args": {
                                        "command": "leave",
                                        "command_args": {
                                            "topic": "${inject_pub_swarm}"
                                        }
                                    }
                                }
                            ],
                            "failure": []
                        }
                    },
                    {
                        "operation": "swarm_command",
                        "isServer": true,
                        "args": {
                            "command": "leave",
                            "command_args": {
                                "topic": "${inject_sub_swarm}"
                            }
                        }
                    },
                    {
                        "operation": "set_var_to",
                        "isServer": true,
                        "args": {
                            "var_name": "swarm_connected",
                            "push_array_name": null,
                            "field_name": null,
                            "var_expr": {
                                "type": "value",
                                "arg": false
                            }
                        }
                    },
                    {
                        "operation": "set_value",
                        "isServer": true,
                        "args": {
                            "variable": "swarm_connected_msg",
                            "value": "Disconnected"
                        }
                    },
                    {
                        "operation": "set_value",
                        "isServer": true,
                        "args": {
                            "variable": "swarm_connected_color",
                            "value": "#FFFFFF"
                        }
                    },
                    {
                        "operation": "set_value",
                        "isServer": true,
                        "args": {
                            "variable": "cmsg",
                            "value": "Disconnected from swarm."
                        }
                    }
                ]
            }
        },
        {
            "operation": "end",
            "isServer": true,
            "args": null
        }
    ],
    "externalForms": {}
}